@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<style>
    .custom-form {
        width: 60%;
    }
</style>

@using (Html.BeginForm())
{
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h6 style="text-align:center">
                    <strong>
                        CẢM ƠN BẠN ĐÃ CHỌN ĐẶT NIỀM TIN VÀO NHỮNG CHUYẾN XE XANH CỦA
                        NHÀ<span style="background-color: #96db56; border-radius: 7px; padding: 1px;">DHGo</span>
                    </strong>
                </h6>
                <div class="card">
                    <div class="card-body">
                        <div class="text-center" style="color:red">@ViewBag.ThongBao</div>
                        <h2 class="card-title text-center mb-4">Đăng Ký</h2>
                        <form class="mx-auto" style="width: 60%;">
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="fullName" class="form-label">Họ và Tên</label>
                                <input style="width: 75%" name="sHoTen" type="text" class="form-control" id="fullName" placeholder="Nhập họ và tên" required>
                            </div>
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input style="width: 75%" name="sEmail" type="email" class="form-control" id="email" placeholder="Nhập địa chỉ email" required>
                            </div>
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="username" class="form-label">Tên đăng nhập</label>
                                <input style="width: 75%" name="sTenDN" type="text" class="form-control" id="username" placeholder="Nhập tên đăng nhập" required>
                            </div>
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="password" class="form-label">Mật khẩu</label>
                                <input style="width: 75%" name="sMatKhau" type="password" class="form-control custom-form" id="password" placeholder="Nhập mật khẩu" required>
                            </div>
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="confirmPassword" class="form-label">Nhập lại mật khẩu</label>
                                <input style="width: 75%" name="sMatKhauNL" type="password" class="form-control custom-form" id="confirmPassword" placeholder="Nhập lại mật khẩu" required>
                            </div>
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="gender" class="form-label">Giới tính</label>
                                <select style="width: 75%" name="sGioiTinh" class="form-select" id="gender" required>
                                    <option value="">Chọn giới tính</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                    <option value="Khác">Khác</option>
                                </select>
                            </div>
                            <div style="margin-left: 120px;" class="mb-3">
                                <label for="address" class="form-label">Địa chỉ</label>
                                <textarea style="width: 75%" name="sDiaChi" class="form-control" id="address" placeholder="Nhập địa chỉ" required></textarea>
                            </div>
                            <div style="margin-left: 120px;" class="form-check mb-3">
                                <input type="checkbox" class="form-check-input" id="agreeTerms" required>
                                <label class="form-check-label" for="agreeTerms">Tôi đồng ý với <a href="#">điều khoản và điều kiện</a></label>
                            </div>
                            <div class="d-grid mb-3 mx-auto">
                                <button type="submit" class="btn btn-primary custom-form" style="margin-top:20px; margin-left:120px">Đăng Ký</button>
                            </div>
                        </form>
                        <div class="text-center mt-3">
                            Đã có tài khoản? <a href="@Url.Action("Login", "User", new { area = "" })" class="text-decoration-none">Đăng nhập ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}

