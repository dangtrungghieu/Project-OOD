
@{
    ViewBag.Title = "Người Dùng";
    Layout = "~/Areas/User/Views/Shared/Layout_User.cshtml";
}

<style>
    .card {
        width: 100%;
    }

    .card-img-top {
        width: 100%;
        height: 200px; /* Đặt chiều cao mong muốn */
        object-fit: cover; /* Đảm bảo hình ảnh không bị méo */
    }
</style>

<div class="container mt-4">
    <h2 style="text-align:center; margin-bottom:50px">Những Loại Xe Đạp Chúng Tôi Cung Cấp</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/Images/XeThuong.jpg" class="card-img-top" alt="Xe Đạp Thường">
                <div class="card-body">
                    <h5 class="card-title">Xe Đạp Thường</h5>
                    <p class="card-text">Mang Lại Trải nghiệm Ngắm Cảnh Năng Động!</p>
                    <a style="float:right" href="@Url.Action("MuonXe", "QuanLy", new {id = 1})" class="btn btn-primary">Muợn Ngay</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/Images/XeDapDoi.jpg" class="card-img-top" alt="Xe Đạp Đôi">
                <div class="card-body">
                    <h5 class="card-title">Xe Đạp Đôi</h5>
                    <p class="card-text">Thích Hợp Cho Cặp Đôi.</p>
                    <a style="float:right" href="@Url.Action("MuonXe", "QuanLy", new {id = 2})" class="btn btn-primary">Muợn Ngay</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="~/Images/XeTheThao.jpg" class="card-img-top" alt="Xe Đạp Thể Thao">
                <div class="card-body">
                    <h5 class="card-title">Xe Đạp Thể Thao</h5>
                    <p class="card-text">Đam Mê Tốc Độ!</p>
                    <a style="float:right" href="@Url.Action("MuonXe", "QuanLy", new {id = 3})" class="btn btn-primary">Muợn Ngay</a>
                </div>
            </div>
        </div>

        <!-- Thêm các thẻ card khác tương tự cho các loại xe đạp khác -->
    </div>
</div>


<!-- Bootstrap JS và Popper.js -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

