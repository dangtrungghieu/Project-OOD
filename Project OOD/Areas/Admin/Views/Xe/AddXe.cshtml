@model IEnumerable<Project_OOD.Models.LOAIXE>
@{
    ViewBag.Title = "AddXe";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Areas/Admin/css/Xe_Admin_Css.css" />
<h2 style="text-align:center; font-weight:bold; padding-top:20px;">THÊM MỚI XE</h2>
<div class="formbold-main-wrapper">
    <div class="formbold-form-wrapper">
        <form action="AddXe" method="POST">
            <div class="flex flex-wrap formbold--mx-3">
                <div class="w-full sm:w-half formbold-px-3">
                    <div class="formbold-mb-5">
                        <label for="fName" class="formbold-form-label"> Số lượng xe cần thêm </label>
                        <input type="number"
                               name="sSoLuong"
                               id="sSoLuong"
                               placeholder="Nhập số lượng xe ....."
                               class="formbold-form-input"
                               value="@ViewBag.sSoLuong"
                               min="1"
                               required />
                    </div>
                </div>
                <div class="w-full sm:w-half formbold-px-3">
                    <div class="formbold-mb-5">
                        <label for="tinhTrang" class="formbold-form-label">Tình trạng</label>
                        <select name="sTinhTrang" id="tinhTrang" class="formbold-form-input" required>
                            <option value="">Chọn tình trạng...</option>
                            <option value="Chưa được mượn">Chưa được mượn</option>
                            <option value="Đang được mượn">Đang được mượn</option>
                            <option value="Đang sửa chữa">Đang sửa chữa</option>
                        </select>
                        <div style="color:red; font-size:15px; font-weight:bold">@ViewBag.ThongBao0</div>
                    </div>
                </div>
            </div>
                <div class="flex flex-wrap formbold--mx-3">
                    <div class="w-full sm:w-half formbold-px-3">
                        <div class="formbold-mb-5 w-full">
                            <label for="date" class="formbold-form-label"> Ngày thêm</label>
                            <input type="text"
                                   name="sNgayThem"
                                   id="date"
                                   class="formbold-form-input"
                                   value="@Html.FormatValue(DateTime.Now, "{0:dd/MM/yyyy}")"
                                   readonly />
                        </div>
                    </div>
                    <div class="w-full sm:w-half formbold-px-3">
                        <div class="formbold-mb-5">
                            <label for="LoaiXe" class="formbold-form-label">Loại xe</label>
                            <select name="sLoaiXe" id="LoaiXe" class="formbold-form-input" required>
                                <option value="0">Chọn loại xe...</option>
                                @foreach (var item in Model)
                                {
                                    <option value="@item.MaLoai">@item.TenLoai</option>
                                }
                            </select>
                            <div style="color:red; font-size:15px; font-weight:bold">@ViewBag.ThongBao2</div>
                        </div>
                    </div>
                </div>

            <div class="flex formbold-mb-5">
                <span style="font-weight:bold; padding-right:5px;">Bạn có chắc chắn muốn thêm số lượng xe này không? </span>
                <div class="flex" style="padding-top:2px">
                    <input type="radio"
                           name="radio1"
                           id="radioButton1"
                           class="formbold-radio"
                           value="1"
                           required />
                    <label for="radioButton1" class="formbold-radio-label"> Có </label>
                </div>
                <div class="flex" style="padding-top:2px">
                    <input type="radio"
                           name="radio1"
                           id="radioButton2"
                           class="formbold-radio"
                           value="0"
                           required />
                    <label for="radioButton2" class="formbold-radio-label"> Không </label>
                </div>
            </div>
            <div>
                <button class="formbold-btn" type="submit">Thêm mới</button>
                <div style="color:red; font-size:15px; font-weight:bold">@ViewBag.ThongBao3</div>
            </div>
        </form>
    </div>
</div>
<a href="@Url.Action("Index","Xe")" class="btn btn-primary" style="margin-top:180px; margin-left:10px"><i class="fa-solid fa-arrow-left"></i> Quay lại trang quản lý xe</a>

