
@{
    ViewBag.Title = "AddLoaiXe";
    Layout = "~/Areas/Admin/Views/Shared/Layout_Admin.cshtml";
}
<link rel="stylesheet" href="~/Areas/Admin/css/Xe_Admin_Css.css" />
<h2 style="text-align:center; font-weight:bold; padding-top:20px;">THÊM MỚI LOẠI XE</h2>
<div class="formbold-main-wrapper">
    <div class="formbold-form-wrapper">
        <form action="AddLoaiXe" method="POST">
            <div class="flex flex-wrap formbold--mx-3">
                <div class="w-full sm:w-half formbold-px-3">
                    <div class="formbold-mb-5">
                        <label for="fName" class="formbold-form-label"> Tên loại xe </label>
                        <input type="text"
                               name="sName"
                               id="sName"
                               placeholder="Nhập tên loại xe....."
                               class="formbold-form-input"
                               value="@ViewBag.sName"
                               required />
                        <div style="color:red; font-size:15px; font-weight:bold">@ViewBag.ThongBao</div>
                    </div>
                </div>
                <div class="w-full sm:w-half formbold-px-3">
                    <div class="formbold-mb-5">
                        <label for="lName" class="formbold-form-label"> Đơn giá (VNĐ) </label>
                        <input type="number"
                               name="sDonGia"
                               id="sDonGia"
                               placeholder="Nhập giá....."
                               min="0"
                               class="formbold-form-input"
                               value="@ViewBag.sDonGia"
                               required />
                    </div>
                </div>
            </div>

            @*<div class="formbold-mb-5">
                    <label for="guest" class="formbold-form-label">
                        How many guest are you bringing?
                    </label>
                    <input type="number"
                           name="guest"
                           id="guest"
                           placeholder="5"
                           class="formbold-form-input" />
                </div>

                <div class="flex flex-wrap formbold--mx-3">
                    <div class="w-full sm:w-half formbold-px-3">
                        <div class="formbold-mb-5 w-full">
                            <label for="date" class="formbold-form-label"> Date </label>
                            <input type="date"
                                   name="date"
                                   id="date"
                                   class="formbold-form-input" />
                        </div>
                    </div>
                    <div class="w-full sm:w-half formbold-px-3">
                        <div class="formbold-mb-5">
                            <label for="time" class="formbold-form-label"> Time </label>
                            <input type="time"
                                   name="time"
                                   id="time"
                                   class="formbold-form-input" />
                        </div>
                    </div>
                </div>*@

            <div class="flex formbold-mb-5">
                <span style="font-weight:bold; padding-right:5px;">Bạn có chắc chắn muốn thêm loại xe này không? </span>
                <div class="flex" style="padding-top:2px">
                    <input type="radio"
                           name="radio1"
                           id="radioButton1"
                           class="formbold-radio"
                           value="1"
                           required />
                    <label for="radioButton1" class="formbold-radio-label"> Có </label>
                </div>
                <div class="flex" style="padding-top:2px">
                    <input type="radio"
                           name="radio1"
                           id="radioButton2"
                           class="formbold-radio"
                           value="0"
                           required />
                    <label for="radioButton2" class="formbold-radio-label"> Không </label>
                </div>
            </div>

            <div>
                <button class="formbold-btn" type="submit">Thêm mới</button>
                <div style="color:red; font-size:15px; font-weight:bold">@ViewBag.ThongBao1</div>
            </div>
        </form>
    </div>
</div>
<a href="@Url.Action("LoaiXe","Xe")" class="btn btn-primary" style="margin-top:180px; margin-left:10px"><i class="fa-solid fa-arrow-left"></i> Quay lại trang quản lý loại xe</a>
